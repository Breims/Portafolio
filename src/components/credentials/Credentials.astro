---
import CardStudies from '@components/credentials/CardStudies.astro';
import CardCredentials from './CardCredentials.astro';
---

<section
	data-testid="credentials"
	id="credentials"
	class="p-8 lg:p-0 grid mt-16 lg:mt-0 lg:h-[50vh] lg:grid-cols-2"
>
	<div class="w-full grid place-content-center place-items-center">
		<header class="w-full grid place-content-center place-items-center mb-10">
			<h1 class="font-Code font-bold uppercase text-2xl text-shadow dark:text-faint lg:text-4xl">
				Credentials
			</h1>
			<span class="h-1 w-10 bg-shadow dark:bg-faint"></span>
		</header>
		<section
			class="p-4 grid grid-flow-col lg:grid-cols-2 h-full w-full gap-4 overflow-x-auto"
		>
			<CardCredentials />
		</section>
	</div>

	<div class="mt-10 grid place-content-center lg:mt-0">
		<header class="grid place-content-center place-items-center mb-10">
			<h1 class="font-Code font-bold uppercase text-2xl text-shadow dark:text-faint lg:text-4xl">
				Studies
			</h1>
			<span class="h-1 w-10 bg-shadow dark:bg-faint"></span>
		</header>
		<section
			class="p-4 grid grid-flow-col lg:grid-cols-2 h-full w-full gap-4 overflow-x-auto"
		>
			<CardStudies />
		</section>
	</div>
</section>
