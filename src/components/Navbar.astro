---
import { Image } from '@astrojs/image/components'; 
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';
import ToggleTheme from '@components/ui/ToggleTheme.astro';
import breimDark from "../assets/logos/breimsW.png";
import breim from "../assets/logos/breimD.png";

const menuitems = [
	{
		title: 'About',
		path: '#about',
	},
	{
		title: "Credentials",
		path: "#credentials",
	},
	{
		title: 'Projects',
		path: '#projects',
	},
	{
		title: 'Contact',
		path: '#contact',
	},
];

const styleshadow = "bg-light backdrop-blur-md bg-opacity-90";
const styleDark = "dark:bg-darkness dark:backdrop-blur-md dark:bg-opacity-95";

---

<header data-testId="header" class={`py-4 flex flex-col items-center justify-between lg:flex-row fixed z-10 w-full top-0 right-0 left-0 px-10 lg:px-32 ${styleshadow} ${styleDark}`}>
	<Astronav>
		<div class="flex w-full items-center justify-between lg:w-auto">
			<Image
			class:list={`hidden dark:block`}
			src={breimDark}
			alt="imagen"
            format="png"
			width={55}
			height={52}
            aspectRatio="16:9"
			loading="eager"
			/>
			<Image
			class:list={`block dark:hidden`}
			src={breim}
			alt="imagen"
            format="png"
			width={55}
			height={52}
            aspectRatio="16:9"
			loading="eager"
			/>
			<div class="block lg:hidden">
				<MenuIcon class="h-4 w-4 text-darkness dark:text-light" />
			</div>
		</div>
		<MenuItems class="mt-2 hidden w-full lg:mt-0 lg:flex lg:w-auto">
			<ul class="flex flex-col lg:flex-row lg:gap-3">
				{
					menuitems.map((item) => (
						<>
							<li>
								<a
									aria-label="navigation link"
									href={item.path}
									class="flex py-2 text-darkness hover:text-faint dark:text-light dark:hover:text-faint lg:px-3"
								>
									{item.title}
								</a>
							</li>
						</>
					))
				}
				<li><ToggleTheme /></li>
			</ul>
		</MenuItems>
	</Astronav>
</header>
