---
import { Image } from '@astrojs/image/components';
import SocialHero from './ui/SocialHero.astro';
import breims from "@assets/images/breims.png";
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="grid place-content-between lg:mb-0">
		<div class="grid place-items-center mb-10 px-2">
			<p class="font-monospace dark:text-light text-darkness text-4xl lg:text-[5.5rem]">
			Brayan Mercado</p>
			<span class="text-faint lg:text-5xl text-xl">Web Developer</span>
			<span class="mb-6 ml-2 h-1 w-10 bg-shadow dark:bg-faint"></span>
		</div>
		<div class="mb-10 flex gap-10 justify-center">
			<SocialHero />
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 lg:w-2/5 items-center justify-center">
		<Image
			class:list={`rounded-full m-auto bg-darkness dark:bg-light`}
			src={breims}
			alt="Coding girl"
			aspectRatio="4:4"
			format="png"
			width={600}
			height={600}
			loading="eager"
		/>
	</div>
</section>
