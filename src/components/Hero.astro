---
import { Image } from '@astrojs/image/components';
import SocialHero from './ui/SocialHero.astro';
import breims from "@assets/images/breims.png";
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-faint lg:text-5xl">
				Hi! My name is <span class="dark:text-light text-darkness">Brayan Mercado</span> and I am a web developer.
			</h1>
		</div>
		<div class="mb-10 flex gap-10 justify-center">
			<SocialHero />
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			class:list={`rounded-full m-auto bg-darkness dark:bg-light`}
			src={breims}
			alt="Coding girl"
			aspectRatio="4:4"
			format="png"
			width={600}
			height={600}
			loading="eager"
		/>
	</div>
</section>
