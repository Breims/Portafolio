---
import { Image } from "@astrojs/image/components";
import credentials from "@content/credentials.json";

interface Credential {
	urlCredential: string;
	imgCredential: string;
	altCredential: string;
	titleCredential: string;
	corporation: string;
}
---

{
	credentials.map((credential: Credential) => (
		<section class="text-darkness w-80 rounded-lg border border-shadow bg-bond p-6 shadow-lg dark:border-bond lg:w-auto">
			<Image
				class:list={`w-7 h-7`}
				src={credential.imgCredential}
				alt={credential.altCredential}
				format="png"
				width={28}
				height={28}
				aspectRatio="4:4"
			/>
			<a href={credential.urlCredential} target="_blank">
				<h5 class="mb-2 font-bold font-Raleway text-2xl">
					{credential.titleCredential}
				</h5>
			</a>

			<a
				href={credential.urlCredential}
				target="_blank"
				class="inline-flex items-center hover:underline font-semibold font-Raleway text-base"
			>
				{credential.corporation}
				<svg
					class="ml-2.5 h-3 w-3"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 18 18"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
					/>
				</svg>
			</a>
		</section>
	))
}
