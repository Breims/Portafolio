---
import { Image } from "@astrojs/image/components";
import SocialContact from "./ui/SocialContact.astro";
import contact from "@assets/images/contact.webp";
import contactLight from "@assets/images/contactLight.webp";
---

<section
	data-testid="contact"
	id="contact"
	class="mt-16 flex flex-col flex-wrap items-center justify-center text-darkness dark:text-light lg:my-24 lg:mt-0 lg:h-[80vh]"
>
	<header class="grid place-items-center lg:w-1/5">
		<h2 class="font-Code uppercase text-2xl text-shadow dark:text-faint lg:text-4xl">Contact</h2>
		<span class="h-1 w-10 bg-shadow dark:bg-faint lg:w-full"></span>
	</header>

	<div class="grid lg:grid-cols-2">

		<section class="order-2 text-center">
			<article class="p-10">
				<p class="font-Raleway font-bold">Email Address</p>
				<p class="font-extrashadow font-Raleway">breim.dev@gmail.com</p>
			</article>
			<article class="p-10">
				<p class="font-Raleway font-bold">Phone Number</p>
				<p class="font-extrashadow font-Raleway">+57 301 3702 999</p>
			</article>
		</section>

		<section class="lg:order-2">
			<figure class="m-auto w-[200px] rounded-lg">
				<Image
					class:list={`hidden dark:block`}
					src={contact}
					alt="imagen"
					format="png"
					width={338}
					height={374}
					aspectRatio="16:9"
					loading="eager"
				/>
				<Image
					class:list={`dark:hidden block`}
					src={contactLight}
					alt="imagen"
					format="png"
					width={338}
					height={374}
					aspectRatio="16:9"
					loading="eager"
				/>
			</figure>
		</section>

	</div>

	<span class="h-1 w-1/2 bg-faint"></span>
	
  <div class="p-10 text-center font-Code font-semibold uppercase">
		<p>Social Media</p>
		<section class="my-4 flex">
			<SocialContact />
		</section>
	</div>
</section>
